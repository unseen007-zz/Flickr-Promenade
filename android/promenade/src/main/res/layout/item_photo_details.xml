<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_promenade_container"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="@dimen/infowindow_footer_height"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/photo_promenade_button"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textSize="12sp"
        android:layout_height="match_parent"
        android:src="@drawable/foot_prints_black_silhouette"/>

    <TextView
        android:id="@+id/photo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/photo_promenade_button"/>

    <TextView
        android:id="@+id/photo_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/photo_title"
        android:layout_toLeftOf="@id/photo_promenade_button"/>

</RelativeLayout>